#!/bin/bash

# ---------------
# Installing
#----------------

echo "+Installing packages..."

ESSENTIAL="
git
vim-gtk
tmux
"

FULL="
$ESSENTIAL
dolphin
ffmpegthumbs
mplayerthumbs
kffmpegthumbnailer
okular
kolourpaint4
gimp
libreoffice

g++
gdb
nasm
openjdk-8-jdk
texlive-full
octave
octave-statistics
python-pip
ruby-dev

qt5-default
qtcreator
qtbase5-examples
qtbase5-doc-html

build-essential
libx11-dev
libgtk2.0-dev
libreadline-dev
python-setuptools

rar
imagemagick
xclip
xbindkeys
unrar
tree
htop
"

list=$ESSENTIAL
if (( $# > 1 ))
then
  echo "Too many arguments, aborting"
  exit
elif (( $# == 1))
then
  if [[ $1 == "-f" ]]
  then
    list=$FULL
  else
    echo "Unknown parameter, aborting"
    exit
  fi
fi

for pkg in $list
do
  regex_normal="^$pkg[[:space:]]*install$"
  regex_platform="^$pkg:.*install$"
  if dpkg --get-selections | grep -q -e "$regex_normal" -e "$regex_platform" >/dev/null
  then
    echo -e "\e[90mPackage $pkg skipped\e[39m"
  else
    sudo apt-get install $pkg -y -q 2> /dev/null
    if (( $? > 0 ))
    then
      echo -e "\e[41mERROR: Package $pkg failed\e[49m"
    else
      echo -e "\e[92mPackage $pkg installed\e[39m"
    fi
  fi
done

echo ""
